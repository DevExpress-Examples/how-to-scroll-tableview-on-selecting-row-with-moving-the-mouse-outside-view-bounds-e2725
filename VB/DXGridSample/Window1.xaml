<Window 
    x:Class="DXGrid_AssignComboBoxToColumn.Window1" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:local="clr-namespace:DXGrid_AssignComboBoxToColumn" 
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" 
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    Title="Window1" 
    Height="300" 
    Width="499" 
    >
    <Grid>
        <dxg:GridControl x:Name="grid" SelectionMode="Row" ItemsSource="{Binding PersonList}">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="FirstName"  />
                <dxg:GridColumn FieldName="LastName"/>
                <dxg:GridColumn FieldName="Age"  />
            </dxg:GridControl.Columns>
            <i:Interaction.Behaviors>
                <local:GridSelectingBehavior></local:GridSelectingBehavior>
            </i:Interaction.Behaviors>
            <dxg:GridControl.View>
                <dxg:TableView x:Name="myTableView" AllowPerPixelScrolling="True">
                </dxg:TableView> 
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</Window>
